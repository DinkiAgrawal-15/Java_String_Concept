class StringBufferExample{  
public static void main(String args[]){  
StringBuffer sb=new StringBuffer("Hello ");  
sb.append("Java");//now original string is changed  (append)
System.out.println(sb);//prints Hello Java  
sb.insert(1,"Java");//now original string is changed  
System.out.println(sb);//prints HJavaello  (insert)
sb.replace(1,3,"Java");  
System.out.println(sb);//prints HJavalo  (replace)
sb.replace(1,3,"Java");  
System.out.println(sb);//prints HJavalo  (delete)
sb.reverse();  
System.out.println(sb);//prints olleH  (reverse)
sb.append("java is my favourite language");  
System.out.println(sb.capacity());//now (16*2)+2=34 i.e (oldcapacity*2)+2  
sb.ensureCapacity(50);//now (34*2)+2 

}  
}  
}  
